    class Square{

        constructor(row,col,ctx,px,py){
            this.row = row;
            this.col = col;
            this.ctx = ctx;
            this.px = px;
            this.py = py;
        }
        draw(){
            if((i+j)%2 != 0) {
                ctx.fillStyle = "#F5F5DC";
            }else{
                ctx.fillStyle = "#A9A9A9";
            }
        }

        putPiece(img,px,py){
            this.img = img;
            ctx.drawImage(img,px,py,40,40);
        }
    }

    var board = [];
    const canvas = document.getElementById("canvas");
    var ctx = canvas.getContext("2d");
    var x = 100,  y= 160;
    var size = 40;
    var posX = x, posY = y;
    for(var k = 0; k< 16 ; k++) board[k] = [];
    for(var i = 0; i < 16; i++){
        for(var j = 0; j < 16; j++){
            posX = x + size *j;
            posY = y + size *i;
            if((j < 4 || j > 11) && (i<4 ||i>11)){
                board[i][j] = -1;
            }else{
                ctx.beginPath();
                ctx.rect(posX, posY, size, size);
                board[i][j] = new Square(i,j,ctx,posX,posY);
                board[i][j].draw();
                ctx.fill();
            }

        }

    }
