    for(var i = 0; i < 16 ; i++){
        posY = y + size * i;
        for (var j = 0; j < 16 ; j++){
            posX = x + size * j;
            if(!((j < 4 || j > 11) && (i<4 ||i>11))) {
                ctx.beginPath();
                ctx.rect(posX, posY, size, size);
                if ((i + j) % 2 != 0) {
                    ctx.fillStyle = "#F5F5DC";
                } else {
                    ctx.fillStyle = "#A9A9A9";
                }
                ctx.fill();
            }
        }
        posX = 80;
    }
    var knightImg = document.createElement('img');
    knightImg.src = 'knight.png';
